{
  "name": "devgen",
  "displayName": "DevGen - Go Code Generator Helper",
  "description": "Syntax highlighting, diagnostics and auto-completion for devgen annotations (enumgen, validategen)",
  "version": "0.1.2",
  "publisher": "tlipoca9",
  "repository": {
    "type": "git",
    "url": "https://github.com/tlipoca9/devgen.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "DevGen",
      "properties": {
        "devgen.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics for missing generated files and unknown annotations"
        }
      }
    },
    "grammars": [
      {
        "scopeName": "comment.devgen.injection",
        "path": "./syntaxes/devgen.tmLanguage.json",
        "injectTo": [
          "source.go"
        ]
      }
    ],
    "configurationDefaults": {
      "editor.tokenColorCustomizations": {
        "textMateRules": [
          {
            "scope": "entity.name.namespace.devgen",
            "settings": {
              "foreground": "#4EC9B0",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "punctuation.definition.annotation.devgen",
            "settings": {
              "foreground": "#DCDCAA",
              "fontStyle": "bold"
            }
          },
          {
            "scope": "entity.name.tag.devgen",
            "settings": {
              "foreground": "#C586C0"
            }
          },
          {
            "scope": "punctuation.definition.parameters.begin.devgen, punctuation.definition.parameters.end.devgen",
            "settings": {
              "foreground": "#FFD700"
            }
          },
          {
            "scope": "constant.numeric.devgen",
            "settings": {
              "foreground": "#B5CEA8"
            }
          },
          {
            "scope": "string.unquoted.devgen",
            "settings": {
              "foreground": "#CE9178"
            }
          },
          {
            "scope": "punctuation.separator.comma.devgen",
            "settings": {
              "foreground": "#FFD700"
            }
          }
        ]
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package --no-dependencies",
    "install-local": "code --install-extension devgen-*.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
