{
  "enumgen": {
    "typeAnnotations": [
      "enum"
    ],
    "fieldAnnotations": [
      "name"
    ],
    "outputSuffix": "_enum.go",
    "annotations": {
      "enum": {
        "doc": "Generate enum helper methods (options: string, json, text, sql)",
        "paramType": "enum",
        "values": [
          "string",
          "json",
          "text",
          "sql"
        ],
        "valueDocs": {
          "json": "Generate MarshalJSON/UnmarshalJSON methods",
          "sql": "Generate Value/Scan methods for database/sql",
          "string": "Generate String() method",
          "text": "Generate MarshalText/UnmarshalText methods"
        }
      },
      "name": {
        "doc": "Custom name for enum value",
        "paramType": "string",
        "placeholder": "name"
      }
    }
  },
  "validategen": {
    "typeAnnotations": [
      "validate"
    ],
    "fieldAnnotations": [
      "required",
      "min",
      "max",
      "len",
      "eq",
      "ne",
      "gt",
      "gte",
      "lt",
      "lte",
      "oneof",
      "email",
      "url",
      "uuid",
      "ip",
      "ipv4",
      "ipv6",
      "alpha",
      "alphanum",
      "numeric",
      "contains",
      "excludes",
      "startswith",
      "endswith",
      "method",
      "regex",
      "format"
    ],
    "outputSuffix": "_validate.go",
    "annotations": {
      "alpha": {
        "doc": "Must contain only letters"
      },
      "alphanum": {
        "doc": "Must contain only letters and numbers"
      },
      "contains": {
        "doc": "Must contain the specified substring",
        "paramType": "string",
        "placeholder": "substring"
      },
      "email": {
        "doc": "Must be a valid email address"
      },
      "endswith": {
        "doc": "Must end with the specified suffix",
        "paramType": "string",
        "placeholder": "suffix"
      },
      "eq": {
        "doc": "Must equal specified value (supports string, number, bool)",
        "paramType": [
          "string",
          "number",
          "bool"
        ],
        "placeholder": "value"
      },
      "excludes": {
        "doc": "Must not contain the specified substring",
        "paramType": "string",
        "placeholder": "substring"
      },
      "format": {
        "doc": "Must be valid format (json, yaml, toml, csv)",
        "paramType": "enum",
        "values": [
          "json",
          "yaml",
          "toml",
          "csv"
        ],
        "maxArgs": 1,
        "valueDocs": {
          "csv": "Validate CSV format",
          "json": "Validate JSON format",
          "toml": "Validate TOML format",
          "yaml": "Validate YAML format"
        }
      },
      "gt": {
        "doc": "Must be greater than",
        "paramType": "number",
        "placeholder": "value"
      },
      "gte": {
        "doc": "Must be greater than or equal",
        "paramType": "number",
        "placeholder": "value"
      },
      "ip": {
        "doc": "Must be a valid IP address"
      },
      "ipv4": {
        "doc": "Must be a valid IPv4 address"
      },
      "ipv6": {
        "doc": "Must be a valid IPv6 address"
      },
      "len": {
        "doc": "Exact length",
        "paramType": "number",
        "placeholder": "value"
      },
      "lt": {
        "doc": "Must be less than",
        "paramType": "number",
        "placeholder": "value"
      },
      "lte": {
        "doc": "Must be less than or equal",
        "paramType": "number",
        "placeholder": "value"
      },
      "max": {
        "doc": "Maximum value or length",
        "paramType": "number",
        "placeholder": "value"
      },
      "method": {
        "doc": "Call specified method for validation (for struct fields)",
        "paramType": "string",
        "placeholder": "MethodName",
        "lsp": {
          "enabled": true,
          "provider": "gopls",
          "feature": "method",
          "signature": "func() error",
          "resolveFrom": "fieldType"
        }
      },
      "min": {
        "doc": "Minimum value or length",
        "paramType": "number",
        "placeholder": "value"
      },
      "ne": {
        "doc": "Must not equal specified value (supports string, number, bool)",
        "paramType": [
          "string",
          "number",
          "bool"
        ],
        "placeholder": "value"
      },
      "numeric": {
        "doc": "Must contain only numbers"
      },
      "oneof": {
        "doc": "Must be one of the specified values",
        "paramType": "list",
        "placeholder": "values"
      },
      "regex": {
        "doc": "Must match the specified regular expression",
        "paramType": "string",
        "placeholder": "pattern"
      },
      "required": {
        "doc": "Field must not be empty/zero"
      },
      "startswith": {
        "doc": "Must start with the specified prefix",
        "paramType": "string",
        "placeholder": "prefix"
      },
      "url": {
        "doc": "Must be a valid URL"
      },
      "uuid": {
        "doc": "Must be a valid UUID"
      },
      "validate": {
        "doc": "Generate Validate() method for struct"
      }
    }
  }
}
